<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity" >

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbRetrofit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retrofit" />

        <RadioButton
            android:id="@+id/rbHttpUrlConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HttpUrlConnection" />

        <RadioButton
            android:id="@+id/rbOkHttp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OkHttp" />

        <RadioButton
            android:id="@+id/rbWebView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WebView" />

    </RadioGroup>

    <Switch
        android:id="@+id/swMinCert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="min Cert enable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <Button
        android:id="@+id/btnLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Load"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swMinCert" />
</androidx.constraintlayout.widget.ConstraintLayout>